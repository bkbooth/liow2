<body itemscope itemtype="http://schema.org/EmailMessage">

<table class="body-wrap">
  <tr>
    <td></td>
    <td class="container" width="600">
      <div class="content">
        <table class="main" width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td class="content-wrap">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="content-block">
                    <img src="https://loveisourweapon.com/images/logo-navbar.png" class="logo" alt="Love is our Weapon logo">
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    {{ group.name }} just signed up to run a campaign on Love is our Weapon!
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    <ul>
                      <li>Name: {{ group.name }}</li>
                      <li>URL: <a href="{{ baseUrl }}/g/{{ group.urlName }}">{{ baseUrl }}/g/{{ group.urlName }}</a></li>
                      <li>Owner: {{ owner.name }}</li>
                      <li>Email: <a href="mailto:{{ owner.email }}">{{ owner.email }}</a></li>
                    </ul>
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    &mdash; The Love is our Weapon team
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
      </div>
    </td>
    <td></td>
  </tr>
</table>

</body>
